{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prettier": "prettier --write .",
    "docker:build": "docker build -t api-gateway .",
    "docker:run": "docker run -p 3000:3000 api-gateway",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=api-gateway)",
    "docker:rm": "docker rm $(docker ps -aq --filter ancestor=api-gateway)",
    "migrate": "ts-node-dev --respawn --transpile-only src/migrations/index.ts",
    "migrate:up": "ts-node-dev --respawn --transpile-only src/migrations/index.ts up",
    "migrate:down": "ts-node-dev --respawn --transpile-only src/migrations/index.ts down",
    "migrate:status": "ts-node-dev --respawn --transpile-only src/migrations/index.ts status",
    "migrate:create": "ts-node-dev --respawn --transpile-only src/migrations/index.ts create",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:dry-run": "standard-version --dry-run",
    "commit": "cz"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "mongoose": "^8.13.2",
    "prettier": "^3.5.3",
    "redis": "^4.7.0",
    "typescript": "^5.8.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.2",
    "zod-env": "^0.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "@vitest/ui": "^3.1.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "standard-version": "^9.5.0",
    "ts-node-dev": "^2.0.0",
    "vitest": "^3.1.1"
  }
}